#!/bin/sh
# This script is only used for developement. It is removed by the
# distribution process.

set -e

OCAMLBUILD=${OCAMLBUILD:="ocamlbuild -tag debug -classic-display \
                          -use-ocamlfind"}

action ()
{
    case $1 in
        default)   $OCAMLBUILD uunf.cma uunf.cmxa ;;
        tests)     $OCAMLBUILD test/tests.otarget ;;
        download-test-files)
            # FIXME this should source from UNICODE_VERSION
            curl -# -S \
         "http://www.unicode.org/Public/UCD/latest/ucd/NormalizationTest.txt" \
            > test/NormalizationTest.txt
            ;;
        test)      $OCAMLBUILD test.native;
                   ./test.native test/NormalizationTest.txt ;;
        doc)       shift; pkg-doc $* doc/dev-api.docdir ;;
        api-doc)   shift; pkg-doc $* doc/api.docdir ;;
        gen_props)  $OCAMLBUILD gen_props.native ;;
        support)   action gen_props
                   check_db
                   ./gen_props.native -norm src/data/uunf_data.ml
                   ;;
        clean)     $OCAMLBUILD -clean
                   rm -f src/*_data.ml
                   ;;
        *)         $OCAMLBUILD $* ;;
    esac
}

check_db ()
{
    if [ ! -f "support/ucd.xml" ]; then
        echo "Missing unicode character database support/ucd.xml, see DEVEL.md"
        exit 1
    fi
}

if [ $# -eq 0 ];
then action default ;
else action $*; fi
